<div class="header-outer-container"">
    <header class="shop-header">
        <div class="header-container">
            <div class="logo">
                <a href="/">
                    <img src="{{ shop.brand.logo | image_url: width: 200 }}" alt="{{ shop.name }}" />
                </a>
            </div>
            <nav class="main-nav">
                {% assign main_menu = linklists.main-menu.links %}
                <ul>
                    {% for link in main_menu %}
                        {%- assign url = link.url -%}
                        {%- if link.url == '/products/type=' -%}
                            {%- assign url = '#' -%}
                        {%- endif -%}
                        <li><a href="{{ url }}">{{ link.title }}</a></li>
                    {% endfor %}
                </ul>
            </nav>
            <div class="header-actions">
                <a href="/account" class="account-link">
                    <svg width="24" height="24" fill="none" stroke="currentColor"><circle cx="12" cy="8" r="4"/><path d="M4 20c0-4 8-4 8-4s8 0 8 4"/></svg>
                </a>
                <a href="/cart" class="cart-link">
                    <svg width="24" height="24" fill="none" stroke="currentColor"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                    <span class="cart-count">{% if cart.item_count > 0 %}{{ cart.item_count }}{% endif %}</span>
                </a>
            </div>
        </div>
    </header>
</div>

{% stylesheet %}
  
.shop-header {
    background: #fff;
    border-bottom: 1px solid #ececec;
    padding: 0;
    font-family: 'Segoe UI', Arial, sans-serif;
}
.header-outer-container {
    max-width: 1200px;
    margin: 0 auto;
}
.header-container {
    /* Remove max-width and margin from here */
    padding: 0 32px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
}
.logo img {
    height: 40px;
    width: auto;
    display: block;
}
.main-nav ul {
    list-style: none;
    display: flex;
    gap: 32px;
    margin: 0;
    padding: 0;
}
.main-nav a {
    text-decoration: none;
    color: #222;
    font-weight: 500;
    font-size: 1rem;
    transition: color 0.2s;
}
.main-nav a:hover {
    color: #0070f3;
}
.header-actions {
    display: flex;
    align-items: center;
    gap: 20px;
}
.header-actions a {
    color: #222;
    position: relative;
    display: flex;
    align-items: center;
    padding: 6px;
    border-radius: 50%;
    transition: background 0.2s;
}
.header-actions a:hover {
    background: #f3f3f3;
}
.cart-count {
    position: absolute;
    top: 0;
    right: -6px;
    background: #ff3e00;
    color: #fff;
    font-size: 0.75rem;
    border-radius: 50%;
    padding: 2px 6px;
    min-width: 18px;
    text-align: center;
    font-weight: bold;
}
@media (max-width: 768px) {
    .header-outer-container {
        max-width: 100%;
        padding: 0 8px;
    }
    .header-container {
        flex-direction: column;
        height: auto;
        padding: 16px;
        gap: 12px;
    }
    .main-nav ul {
        gap: 16px;
    }
}
{% endstylesheet %}