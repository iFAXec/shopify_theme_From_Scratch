<!-- Product Page Template -->
{% stylesheet %}
  
    .product-page-container {
        display: flex;
        max-width: 900px;
        margin: 40px auto;
        gap: 40px;
        font-family: Arial, sans-serif;
    }

    .product-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image img {
        max-width: 100%;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .product-details {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .product-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 16px;
    }

    .product-description {
        font-size: 1.1rem;
        margin-bottom: 24px;
        color: #444;
    }

    .add-to-cart-btn {
        background: #1a73e8;
        color: #fff;
        border: none;
        padding: 14px 32px;
        font-size: 1rem;
        border-radius: 4px;
        cursor: pointer;
        transition: background 0.2s;
    }

    .add-to-cart-btn:hover {
        background: #155ab6;
    }
{% endstylesheet %}


<div class="product-page-container">
    <div class="product-image">
        <img src="{{product.featured_image |  image_url: width: 800 }}" alt="Product Image">
    </div>

    <div>
    {% for block in section.blocks %}
        
    {% case block.type %}
        {% when "title" %}
            <h2 class="product-title">{{product.title}}</h2>
            
        {% when "description" %}
            <div class="product-description">
            {{product.description}}
            </div>
        {% when "price" %}
            <p class="product-price">{{product.price | money }}</p>
        {% when "add_to_cart" %}
            {% form "product", product %}
                <input type="hidden" name="id" value="{{product.selected_or_first_available_variant.id}}">
                <button type="submit" class="add-to-cart-btn">Add to Cart</button>
            {% endform %}
        {% endcase %}        
        {% endfor %}
    </div>

 
</div>

{% schema %}
{
    "name": "main-product",
    "tag": "section",
    "blocks": [
        {
        "type": "title",
        "name": "Title"
       },
       {
        "type": "description",
        "name": "Description"
       },
       {
        "type": "price",
        "name": "Price"
       },
       {
        "type": "add_to_cart",
        "name": "Add to Cart"
       }
],
    "presets": [
        {
            "name": "Main Product"
        }
    ]
}
{% endschema %}