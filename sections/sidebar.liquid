<style>
.sidebar-drawer-wrapper {
    position: fixed;
    top: 0;
    right: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1000;
    display: none;
}
.sidebar-drawer-wrapper.open {
    display: block;
}
.sidebar-drawer-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.4);
    transition: opacity 0.3s;
    opacity: 0;
    pointer-events: none;
}
.sidebar-drawer-wrapper.open .sidebar-drawer-backdrop {
    opacity: 1;
    pointer-events: auto;
}
.sidebar-drawer {
    position: absolute;
    top: 0;
    right: 0;
    width: 550px;
    max-width: 100vw;
    height: 100vh;
    background: #fff;
    box-shadow: -2px 0 8px rgba(0,0,0,0.15);
    transform: translateX(100%);
    transition: transform 0.3s cubic-bezier(.4,0,.2,1);
    will-change: transform;
    display: flex;
    flex-direction: column;
}
.sidebar-drawer-wrapper.open .sidebar-drawer {
    transform: translateX(0);
}
.sidebar-drawer-close-btn {
    position: absolute;
    top: 1px;
    left: 1px;
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
}
</style>

<div class="sidebar-drawer-wrapper" id="sidebarDrawer">
    <div class="sidebar-drawer-backdrop"></div>
    <aside class="sidebar-drawer" role="complementary" aria-label="Sidebar drawer">
        <button class="sidebar-drawer-close-btn" aria-label="Close sidebar">&times;</button>
        <h2 style="margin:24px;">{{  "cart.title" | t }}</h2>
    </aside>
</div>

{% schema %}
{
    "name": "Sidebar Drawer",
    "tag": "section"
}
{% endschema %}
